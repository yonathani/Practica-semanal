@model IEnumerable<Practica1.Models.User>

@{
    ViewBag.Title = "Index";
}

<h1>Usuarios</h1>

<p>
    @Html.ActionLink("Crear nuevo usuario", "Create", null, new { @class = "btn btn-sm btn-success" })
</p>

<table class="table">
    <tr>
        <th>
            <label class="control-label">Nombre completo</label>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            <label class="control-label col-md-2">Telefono</label>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new {@class="btn btn-sm btn-warning"}) 
            @Html.ActionLink("Info", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-info" }) 
            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-danger" })
        </td>
    </tr>
}

</table>
